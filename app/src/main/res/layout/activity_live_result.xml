<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nav.Live.LiveResult"
    android:background="@color/colorGray">

    <TextView
        android:id="@+id/live_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="40dp"
        android:text="게시글"
        android:textColor="#000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginTop="100dp">
        <TextView
            android:id="@+id/live_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="제목"
            android:textColor="#000"
            android:textSize="35dp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="180dp"
        android:background="#FDFDFD" />
    <TextView
        android:id="@+id/live_dir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="190dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="열차정보"
        android:textSize="25dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp"
        android:background="#FDFDFD" />
    <ScrollView
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp"
        android:layout_width="fill_parent"
        android:layout_height="200dp">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp">
            <TextView
                android:id="@+id/live_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="29dp"
                android:layout_marginTop="20dp"
                android:text="내용"/>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="450dp">
        <EditText
            android:id="@+id/live_cmt_data"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:layout_marginLeft="5dp"
            android:hint="댓글을 입력하세요"
            android:background="@drawable/edittext"/>
        <Button
            android:onClick="OnClick"
            android:id="@+id/live_add"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="1dp"
            android:text="등록"
            />
        <Button
            android:onClick="OnClick"
            android:id="@+id/live_cmt_show"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="댓글보기"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_marginTop="500dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/live_cmt_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:divider="#FDFDFD"
            android:dividerHeight="1dp"></ListView>
    </LinearLayout>
</RelativeLayout>